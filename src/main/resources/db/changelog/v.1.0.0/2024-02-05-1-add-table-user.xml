<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet logicalFilePath="2024-02-05-1-add-table-user."
               id="2024-02-05-1-add-table-user." author="s.mitskevich">
        <sql>CREATE TYPE user_role AS ENUM ('USER','ADMIN')</sql>
        <sql>CREATE CAST (varchar AS user_role) WITH INOUT AS IMPLICIT</sql>
        <createTable tableName="_user">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="user_role" type="user_role">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>